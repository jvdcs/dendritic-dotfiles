  // --------------------------------------------------------------------------
  // TOKEN CUSTOMIZATIONS (Your existing syntax rules)
  // --------------------------------------------------------------------------
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "punctuation.definition.comment"
        ],
        "settings": {
          "foreground": "#4b4b4a",
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "string",
          "punctuation.definition.string"
        ],
        "settings": {
          "foreground": "#499294",
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "string.regexp",
          "string.special",
          "string.other.link"
        ],
        "settings": {
          "foreground": "#86adcd",
          "fontStyle": ""
        }
      },
      {
        "scope": [
          "constant",
          "support.constant"
        ],
        "settings": {
          "foreground": "#de9bc8"
        }
      },
      {
        "scope": [
          "keyword",
          "storage.type",
          "storage.modifier",
          "punctuation.definition.keyword"
        ],
        "settings": {
          "foreground": "#767675"
        }
      },
      {
        "scope": [
          "keyword.operator",
          "punctuation.separator",
          "punctuation.terminator"
        ],
        "settings": {
          "foreground": "#767675",
          "fontStyle": "italic"
        }
      },
      {
        "scope": "punctuation.definition.template-expression",
        "settings": {
          "foreground": "#c586c0"
        }
      },
      {
        "scope": [
          "punctuation.section",
          "punctuation.accessor"
        ],
        "settings": {
          "foreground": "#d1d1d1"
        }
      },
      {
        "scope": [
          "punctuation.bracket",
          "meta.brace",
          "punctuation.definition.parameters",
          "punctuation.definition.block"
        ],
        "settings": {
          "foreground": "#4b4b4a"
        }
      },
      {
        "scope": [
          "entity.name.function",
          "support.function",
          "meta.function-call"
        ],
        "settings": {
          "foreground": "#60967d"
        }
      },
      {
        "scope": "entity.name.function.special",
        "settings": {
          "fontStyle": "underline"
        }
      },
      {
        "scope": "support.function.macro",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "variable",
          "meta.definition.variable"
        ],
        "settings": {
          "foreground": "#d1d1d1"
        }
      },
      {
        "scope": "variable.parameter",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "variable.language.this",
          "variable.other.object.property",
          "variable.other.property",
          "support.variable.property",
          "variable.other.enummember"
        ],
        "settings": {
          "foreground": "#86adcd"
        }
      },
      {
        "scope": "variable.other.builtin",
        "settings": {
          "foreground": "#86adcd",
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "entity.name.type",
          "entity.name.class",
          "entity.name.namespace",
          "entity.name.scope-resolution",
          "support.type",
          "support.class"
        ],
        "settings": {
          "foreground": "#86adcd"
        }
      },
      {
        "scope": [
          "invalid",
          "invalid.illegal"
        ],
        "settings": {
          "foreground": "#ff968c",
          "fontStyle": "italic"
        }
      },
      {
        "scope": "emphasis",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "strong",
        "settings": {
          "fontStyle": "bold"
        }
      }
    ]
  },
